{
    "compilerOptions": {
        "skipLibCheck": true,
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "allowJs": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "outDir": "./build",
        "rootDir": "src"
    },
    "module": "ESNext",
    "moduleResolution": "node",
    "ts-node": {
        // these options are overrides used only by ts-node
        "compilerOptions": {
            "module": "commonjs"
        }
    }
}
